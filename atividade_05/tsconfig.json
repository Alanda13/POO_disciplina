{
    "compilerOptions": {
      "target": "es2015",           // Define o ECMAScript alvo para compilação
      "lib": ["es2015", "dom"],     // Inclui as definições de ECMAScript 2015 e DOM
      "strict": true,               // Ativa todas as verificações estritas de tipo
      "esModuleInterop": true,      // Habilita interoperabilidade com módulos CommonJS
      "module": "commonjs",         // Define o sistema de módulos
      "moduleResolution": "node"    // Utiliza o método de resolução de módulos do Node.js
    },
    "include": [
      "src/**/*.ts"  // Inclui todos os arquivos TypeScript dentro da pasta src
    ],
    "exclude": [
      "node_modules"  // Exclui a pasta node_modules
    ]
  }
  